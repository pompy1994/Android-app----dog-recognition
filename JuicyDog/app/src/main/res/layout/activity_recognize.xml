<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/recognize_layout_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Discern"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/recognize_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Please enter a Dog Name"
            android:maxEms="1"
            android:textSize="16sp" />


        <Button
            android:id="@+id/recognize_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_none2"
            android:text="Query"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/recognize_layout_to"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">


        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/recognize_dogImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/dog1" />

            <TextView
                android:id="@+id/recognize_dogName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#42000000"
                android:gravity="center"
                android:text="购过"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />

        </FrameLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/recognize_back"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:background="@drawable/btn_exit"
                android:layout_height="wrap_content"
                android:text="Back" />

            <Button
                android:id="@+id/recognize_findStore"
                android:layout_width="wrap_content"
                android:textColor="#5000"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_none"
                android:layout_marginLeft="20dp"
                android:text="Search Stores" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
